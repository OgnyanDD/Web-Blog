<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST">
            <fieldset>
                <legend><i class="fa fa fa-edit"></i> Edit the following article:</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Link</label>
                    <div class="col-sm-4 ">
                        <input type="url" class="form-control" id="link"
                               placeholder="Please enter image web link..."
                               name="link" value="{{link}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Article Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title"
                               name="title" required value="{{title}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="publicationType">Publication Type</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="publicationType" placeholder="Publication Type"
                               name="publicationType" value="{{publicationType}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Content</label>
                    <div class="col-sm-6">
                            <textarea class="form-control" id="articleContent" placeholder="Content" rows="5"
                                      name="content" required>{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-success">Edit</button>
                        <a class="btn btn-default btn-xs" href="/user/myarticles">Back &raquo;</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>